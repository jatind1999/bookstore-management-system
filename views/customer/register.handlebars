<!-- views/customer/register.handlebars -->

<h2>Customer Registration</h2>

<form action="/customers/register" method="post">
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
            type="text"
            id="username"
            name="username"
            class="form-control"
            required
        />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            required
        />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            required
        />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

<a href="/customer/login">Already have an account? Login here</a>